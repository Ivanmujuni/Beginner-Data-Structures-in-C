#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i, students;

    printf("How many students are present? ");
    scanf("%d", &students);

    int *ptr = (int *) malloc(students * sizeof(int));

    if (ptr == NULL) {
        printf("Memory not available");
        exit(1);
    }

    int totalscore = 0;
    int highest = 0;
    int lowest = 0;

    for (i = 0; i < students; i++) {
        printf("Please enter the student's score: ");
        scanf("%d", ptr + i);
        totalscore += *(ptr + i);

        if (i == 0) {
            highest = *(ptr + i);
            lowest = *(ptr + i);
        }

        if (*(ptr + i) > highest) {
            highest = *(ptr + i);
        }

        if (*(ptr + i) < lowest) {
            lowest = *(ptr + i);
        }
    }

    float averagescore = (float)totalscore / students;

    printf("\nThe total score is %d", totalscore);
    printf("\nThe average score is %.2f", averagescore);
    printf("\nThe highest score is %d", highest);
    printf("\nThe lowest score is %d\n", lowest);

    free(ptr);
    return 0;
}
